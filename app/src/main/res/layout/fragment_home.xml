<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#3D2B1F"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:padding="10dp"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:gravity="center">
        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CODEX"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/irish"
            android:layout_marginBottom="10dp"
            android:textSize="50sp"
            android:layout_gravity="center"
            />

        <!-- Torch Decorations and Buttons in a Horizontal Layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/torch1"
                    android:layout_width="32dp"
                    android:layout_marginBottom="16dp"
                    android:layout_height="64dp"
                    android:src="@drawable/torch"
                    android:contentDescription="Torch Left"
                    android:layout_gravity="top" />
                <ImageView
                    android:id="@+id/torch3"
                    android:layout_width="32dp"
                    android:layout_marginBottom="16dp"
                    android:layout_height="64dp"
                    android:src="@drawable/torch"
                    android:contentDescription="Torch Left"
                    android:layout_gravity="bottom" />

            </LinearLayout>
            <!-- Left Torch Image -->

            <!-- Button List -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center">

                <!-- New Run Button -->
                <ImageView
                    android:id="@+id/newRunButton"
                    android:layout_width="200dp"
                    android:scaleType="fitXY"
                    android:layout_height="70dp"
                    android:src="@drawable/newrun" />
                <!-- Continue Button -->
                <ImageView
                    android:id="@+id/continueButton"
                    android:layout_width="200dp"
                    android:scaleType="fitXY"
                    android:layout_height="70dp"
                    android:src="@drawable/cont" />

                <!-- Exit Button -->
                <ImageView
                    android:id="@+id/exitButton"
                    android:layout_width="200dp"
                    android:scaleType="fitXY"
                    android:layout_height="70dp"
                    android:src="@drawable/exit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/torch4"
                    android:layout_width="32dp"
                    android:layout_marginBottom="16dp"
                    android:layout_height="64dp"
                    android:src="@drawable/torch"
                    android:contentDescription="Torch Left"
                    android:layout_gravity="top" />
                <ImageView
                    android:id="@+id/torch2"
                    android:layout_width="32dp"
                    android:layout_marginBottom="16dp"
                    android:layout_height="64dp"
                    android:src="@drawable/torch"
                    android:contentDescription="Torch Left"
                    android:layout_gravity="bottom" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
