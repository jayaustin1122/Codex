<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#3D2B1F"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Game"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:paddingBottom="20dp"
        android:fontFamily="@font/retro_font" />

    <!-- Torch Decorations and Buttons in a Horizontal Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Left Torch Image -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="64dp"
            android:src="@drawable/button_background"
            android:contentDescription="Torch Left"
            android:layout_gravity="center" />

        <!-- Button List -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center">

            <!-- New Run Button -->
            <Button
                android:id="@+id/newRunButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="new run"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"/>

            <!-- Continue Button -->
            <Button
                android:id="@+id/continueButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="continue"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"/>

            <!-- Exit Button -->
            <Button
                android:id="@+id/exitButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="exit"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Right Torch Image -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="64dp"
            android:src="@drawable/button_background"
            android:contentDescription="Torch Right"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>
