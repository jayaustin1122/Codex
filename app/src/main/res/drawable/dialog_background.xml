<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/dialog_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with brown-like color resembling tree -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3D2B1F" /> <!-- Dark brown background -->
            <!-- Rounded corners -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Inner layer with gold outline -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#FFD700" /> <!-- Gold border -->
            <corners android:radius="16dp" /> <!-- Same rounded corners -->
        </shape>
    </item>
</layer-list>
